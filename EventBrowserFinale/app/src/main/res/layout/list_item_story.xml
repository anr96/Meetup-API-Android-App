<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
  	android:layout_marginTop="8dp"
  	android:layout_marginLeft="8dp"
  	android:layout_marginRight="8dp"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
	android:layout_width="match_parent"
				  android:layout_height="128dp"
				  android:elevation="4dp">

	  <ImageView
		  android:id="@+id/list_item_story_card"
		  android:layout_width="115dp"
		  android:layout_height="115dp"
		  android:src="@drawable/card"
		  android:layout_alignParentRight="true"
		  android:layout_marginRight="6dp"
		  android:paddingTop="50dp"
		  android:padding="4dp"/>

	  <TextView
		android:id="@+id/list_item_card_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/list_item_story_card"
		android:textStyle="bold"
		android:paddingTop="8dp"
		tools:text="Card Number"
		android:paddingLeft="15dp"
		android:paddingBottom="10dp"/>


	<TextView
	  android:id="@+id/list_item_story_name"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textStyle="bold"
	  tools:text="Name"
	  android:layout_below="@+id/list_item_card_name"
	  android:layout_toLeftOf="@+id/list_item_story_card"
	  android:layout_toStartOf="@+id/list_item_story_card"
	  android:paddingLeft="15dp"
	  android:paddingBottom="8dp"/>

	<TextView
	  android:id="@+id/list_item_story_description"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textStyle="bold"
	  tools:text="Description"
	  android:paddingLeft="4dp"
	  android:paddingBottom="8dp"
	  android:layout_marginLeft="10dp"
	  android:layout_below="@+id/list_item_story_name"
	  android:layout_alignParentLeft="true"
	  android:layout_alignParentStart="true"
	  android:layout_toLeftOf="@+id/list_item_story_card"
	  android:layout_toStartOf="@+id/list_item_story_card"
	  android:layout_marginRight="10dp"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>
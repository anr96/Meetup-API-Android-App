<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cardView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="8dp"
	android:layout_marginTop="8dp"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	app:cardCornerRadius="@dimen/activity_vertical_margin"
	app:cardElevation="@dimen/activity_vertical_margin"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<RelativeLayout
		android:layout_width="match_parent" android:layout_height="match_parent">
		<ImageView
			android:id="@+id/list_item_story_card"
			android:layout_width="125dp"
			android:layout_height="125dp"
			android:src="@drawable/card"
			android:layout_alignParentRight="true"
			android:layout_marginRight="6dp"
			android:paddingTop="50dp"
			android:padding="4dp"/>

		<TextView
			android:text="meetup_id"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:id="@+id/meetup_id"
			/>

		<TextView
			android:text="meetup_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/meetup_name"
			android:textStyle="normal|bold"
			android:layout_below="@+id/meetup_id"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp"
			android:layout_toLeftOf="@+id/list_item_story_card"
			android:layout_toStartOf="@+id/list_item_story_card"
			android:textColor="@color/pink"/>



		<TextView
			android:text="#ofmembers"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/members"
			android:textStyle="normal|bold"
			android:layout_below="@+id/meetup_name"
			android:layout_alignLeft="@+id/meetup_name"
			android:layout_alignStart="@+id/meetup_name"
			android:layout_toLeftOf="@+id/list_item_story_card"
			android:layout_toStartOf="@+id/list_item_story_card" />

		<TextView
			android:text="link"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/link_text"
			android:paddingTop="10dp"
			android:layout_below="@+id/members"
			android:layout_alignLeft="@+id/members"
			android:layout_alignStart="@+id/members"
			android:layout_marginLeft="11dp"
			android:layout_marginStart="11dp"
			android:layout_toLeftOf="@+id/list_item_story_card"
			android:layout_toStartOf="@+id/list_item_story_card" />


	</RelativeLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
  	android:layout_marginTop="8dp"
  	android:layout_marginLeft="8dp"
  	android:layout_marginRight="8dp"
    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
	android:layout_width="match_parent"
				  android:layout_height="128dp"
				  android:elevation="4dp">

	  <com.android.volley.toolbox.NetworkImageView
		  android:id="@+id/nivPhoto"
		  android:layout_width="100dp"
		  android:layout_height="130dp"
		  android:padding="5dp"
		  android:layout_marginEnd="10dp"
		  android:layout_marginRight="15dp"
		  android:src="@drawable/card"
		  android:layout_alignParentEnd="true"
		  android:layout_alignParentRight="true"
		  android:layout_centerVertical="true"/>


	  <TextView
		android:id="@+id/list_meet_up_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@+id/nivPhoto"
		android:textStyle="bold"
		android:paddingTop="8dp"
		tools:text="Name"
		android:paddingLeft="15dp"
		android:paddingBottom="8dp"/>

	  <TextView
		  android:id="@+id/list_meet_up_members"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  tools:text="Members"
		  android:layout_below="@+id/list_meet_up_name"
		  android:layout_toLeftOf="@+id/nivPhoto"
		  android:layout_toStartOf="@+id/nivPhoto"
		  android:paddingLeft="13dp"
		  android:paddingBottom="13dp"/>

	  <TextView
		  android:id="@+id/list_meet_up_link"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content"
		  tools:text="Description"
		  android:paddingLeft="4dp"
		  android:paddingBottom="15dp"
		  android:layout_marginLeft="10dp"
		  android:layout_below="@+id/list_meet_up_members"
		  android:layout_alignParentLeft="true"
		  android:layout_alignParentStart="true"
		  android:layout_toLeftOf="@+id/nivPhoto"
		  android:layout_toStartOf="@+id/nivPhoto"
		  android:layout_marginRight="10dp"/>

	  <TextView
	  android:id="@+id/list_meet_up_description"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  tools:text="Description"
	  android:paddingLeft="4dp"
	  android:paddingTop="15dp"
	  android:paddingBottom="8dp"
	  android:layout_marginLeft="10dp"
	  android:layout_below="@+id/list_meet_up_link"
	  android:layout_alignParentLeft="true"
	  android:layout_alignParentStart="true"
	  android:layout_toLeftOf="@+id/nivPhoto"
	  android:layout_toStartOf="@+id/nivPhoto"
	  android:layout_marginRight="10dp"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>